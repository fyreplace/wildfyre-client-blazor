@inject IJSRuntime javascript

<div class="-updater -update-checker">
    <Button Loading=@updating OnClick=@OnUpdate>
        <span class="-updater-text">Update</span>
        <span class="-update-checker-text">Check for update</span>
    </Button>
</div>

@code
{
    private bool updating;

    private async Task OnUpdate(MouseEventArgs args) {
        updating = true;
        await javascript.InvokeVoidAsync("doUpdate");
    }
}
